<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="130.0dp"
    android:background="#30000000"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/notification_imageIco"
        android:layout_width="60.0dip"
        android:layout_height="60.0dip"
        android:src="@drawable/b15" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120.0dip"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/notification_linearlayout01"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginBottom="10.0dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/notifition_showsongname"
                android:layout_width="180.0px"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_weight="0.2"
                android:layout_x="61.0px"
                android:layout_y="69.0px"
                android:focusable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="律动音乐"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/notifition_play"
                android:layout_width="50.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="150.0"
                android:src="@drawable/ic_play" />

            <ImageView
                android:id="@+id/notifition_next"
                android:layout_width="50.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="150.0"
                android:src="@drawable/ic_next" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginBottom="5.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/notifition_showsongcurr"
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:gravity="center_horizontal" />

            <SeekBar
                android:id="@+id/notifition_seekbar"
                android:layout_width="250.0dip"
                android:layout_height="30.0dip"
                android:layout_gravity="start|top|center"
                android:layout_weight="0.15" />

            <TextView
                android:id="@+id/notifition_showsonglen"
                android:layout_width="wrap_content"
                android:layout_height="25.0dip"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>